{% extends "base.html.twig" %}

{% block title %}
    Detalhes do Produto: {{ produto.nome }}
{% endblock %}

{% block body %}
    <h1>Visualização de produto - <small>{{ produto.nome }}</small></h1>
    <hr>
    <table class="table table-striped">

        <tbody>
        <tr>
            <th>Cod.</th>
            <td>{{ produto.id }}</td>
        </tr>
        <tr>
            <th>Imagem</th>
            <td><img src="{{ produto.imagem }}" width="100"></td>
        </tr>
        <tr>
            <th>Nome</th>
            <td>{{ produto.nome }}</td>
        </tr>
        <tr>
            <th>Preço</th>
            <td>R$ {{ produto.preco|number_format(2, ",", ".") }}</td>
        </tr>
        <tr>
            <th>Descrição</th>
            <td>{{ produto.descricao|nl2br }}</td>
        </tr>
        </tbody>

    </table>

    <h2>Características</h2>
    <table class="table table-striped table-hover mt-3">
    <thead>
    <tr>
        <th>Característica</th>
        <th>Decrição</th>
    </tr>
    </thead>
    <tbody>

    {% for caracteristica in carateristicas %}
        <tr>
            <td>{{ caracteristica.nome }}</td>
            <td>{{ caracteristica.descricao }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="2">Nenhum Registro</td>
        </tr>
    {% endfor %}
{% endblock %}