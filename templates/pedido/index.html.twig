{% extends 'base.html.twig' %}

{% block title %}Seu Pedido{% endblock %}

{% block body %}
    <h1>Seu Pedido</h1>
    <div class="row">
        <div class="col-md-6">
            <h2>Seus Dados</h2>
            <hr>
            {% include "pedido/_form.html.twig" %}
        </div>

        <div class="col-md-6" style="border-left: 1px solid rgba(0,0,0,.1)">
            <h2>Carrinho</h2>
            <hr>
            {% for item in carrinho %}

                <p>{{ item.nome }} - {{ item.quantidade }}</p>

            {% else %}
                <p>Não há ítens no Carrinho</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
