{% extends "base.html.twig" %}

{% block title %}
    Visualização de Caracteristica
{% endblock %}

{% block body %}
    <h1>Visualização de Característica - <small>{{ caracteristica.nome }}</small></h1>
    <hr>
    <table class="table table-striped">

        <tbody>
        <tr>
            <th>Cod.</th>
            <td>{{ caracteristica.id }}</td>
        </tr>
        <tr>
            <th>Nome</th>
            <td>{{ caracteristica.nome }}</td>
        </tr>
        <tr>
            <th>Descrição</th>
            <td>{{ caracteristica.descricao|nl2br }}</td>
        </tr>
        </tbody>

    </table>
{% endblock %}