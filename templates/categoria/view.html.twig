{% extends "base.html.twig" %}

{% block title %}
    Visualização de Categoria
{% endblock %}

{% block body %}
    <h1>Visualização de Categoria - <small>{{ categoria.nome }}</small></h1>
    <hr>
    <table class="table table-striped">

        <tbody>
        <tr>
            <th>Cod.</th>
            <td>{{ categoria.id }}</td>
        </tr>
        <tr>
            <th>Nome</th>
            <td>{{ categoria.nome }}</td>
        </tr>
        <tr>
            <th>Descrição</th>
            <td>{{ categoria.descricao|nl2br }}</td>
        </tr>
        </tbody>

    </table>
{% endblock %}